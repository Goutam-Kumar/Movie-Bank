<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="@dimen/dim_200_dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dim_5_dp"
    app:cardElevation="@dimen/dim_2_dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_poster"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_200_dp"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_movie_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dim_5_dp"
            android:textSize="@dimen/dim_15_sp"
            android:text="@string/app_name"
            android:textColor="@color/black"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
